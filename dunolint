(lang dunolint 1.0)

;; Everything is instrumented
(rule
 (enforce
  (dune
   (instrumentation
    (backend bisect_ppx)))))

;; Test lib naming
(rule
 (cond
  ((path (glob test/**))
   (enforce
    (dune
     (library (not (has_field public_name))))))))

;; Configure the ppx_js_style linter
(rule
 (enforce
  (dune
   (lint
    (pps
     (and
      (pp ppx_js_style)
      (flag
       (name -allow-let-operators)
       (param none)
       (applies_to (pp ppx_js_style)))
      (flag
       (name -check-doc-comments)
       (param none)
       (applies_to (pp ppx_js_style)))))))))

;; No preprocessing
(rule
 (cond
  ((path (glob src/**))
   (enforce
    (dune
     (preprocess no_preprocessing))))))
